<% include ./../partials/header %>

<div class="row">
	<div class="container">
		<h1 style="text-align: center">Edit <%=campground.name%></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method='POST'>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]"> <!--注意这里不是placeholder了，而是value-->
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]">
				</div>				
				<div class="form-group">
					<input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-default btn-block" type="submit">
				</div>
			</form>
			<a href="/campgrounds">go back</a>
		</div>
	</div>
</div>

<% include ./../partials/footer %> 