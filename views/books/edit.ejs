<% include ./../partials/header %>

<div class="row">
	<div class="container">
		<h1 style="text-align: center">Edit <em><%=book.title%></em> </h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/books/<%=book._id%>?_method=PUT" method='POST'>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=book.title%>" name="title"> <!--注意这里不是placeholder了，而是value-->
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=book.author%>" name="author">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=book.image%>" name="image">
				</div>				
				<div class="form-group">
					<input class="form-control" type="text" value="<%=book.description%>" name="description">
				</div>
				<div class="form-group">
					<label for="location">Price in $</label>
					<input class="form-control" type="number" value="<%= book.price %>" name="price" step="0.1" min="0" required>
				</div>
				<div class="form-group">
					<label for="location">Location</label>
					<input class="form-control" type="text" value="<%= book.location %>" name="location">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-default btn-block" type="submit">
				</div>
			</form>
			<a href="/books">go back</a>
		</div>
	</div>
</div>

<% include ./../partials/footer %> 
