<% include ./../partials/header %>
<div class="row">
	<div class="container">
		<h1 style="text-align: center">Add a new comment to <br> <em><%= book.title %></em> </h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/books/<%= book._id %>/comments" method='POST'>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="text" name="comment[text]">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-default btn-block" type="submit">
				</div>
			</form>
			<a href="/books">go back</a>
		</div>
	</div>
</div>

<% include ./../partials/footer %> 
